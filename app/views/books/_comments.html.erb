  <% book.book_comments.each do |book_comment| %>
      <%= attachment_image_tag book_comment.user, :profile_image, fallback: "no_image.jpg", size: '40x40' %>
      <%= book_comment.created_at.strftime('%Y/%m/%d') %><%= book_comment.comment %>
    <% if book_comment.user == current_user %>
      <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, remote: true %>
    <% end %><br>
      <%= book_comment.user.name %><br>
  <% end %>