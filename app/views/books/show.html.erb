  <div class="success-message">
<% if flash[:notice] %>
     <p id="notice">
       <%= flash[:notice] %>
     </p>
  </div>
<% end %>



<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/list', user: @user, book: @newbook %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>

            <td><%= link_to user_path(@books.user_id) do %>
             <%= attachment_image_tag(@user, :profile_image, :fill, 40, 40, fallback:"no_image.jpg", size: '40x40') %><br>
             <%= @books.user.name %>
            <% end %>
            </td>
            <td><%= link_to @books.title, book_path(@books) %></td>
            <td><%= @books.body %></td>
            <td>
                <div id="favorite_area_<%= @books.id %>">
                    <%= render 'books/favorite', books: @books %>
                </div>
            </td>
            <td>コメント数：<%= @books.book_comments.count %></td>
            <td>
  <% if @books.user == current_user %>
            <%= link_to "Edit", edit_book_path(@books), class:"btn btn-sm btn-success" %>
            </td>
  <% end %>
            <td>
  <% if @books.user == current_user %>
            <%= link_to "Destroy", book_path(@books), class:"btn btn-sm btn-danger", method: :delete, "data-confirm" => "本当に削除しますか？" %>
  <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    <div id="comments_area">
      <%= render 'books/comments', book: @books %>
    </div>

    <div class="new_comment">
      <%= render 'books/form', books: @books, book_comment: @book_comment %>
    </div>


      </div>
    </div>
  </div>
</div>
