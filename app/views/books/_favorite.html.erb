<% if books.favorited_by?(current_user) %>

    <%= link_to book_favorites_path(books), method: :delete, remote: true do %>
      <i class="fas fa-heart unlike-btn" ></i>
        <%= books.favorites.count %>
    <% end %>

<% else %>

    <%= link_to book_favorites_path(books), method: :post, remote: true do%>
       <i class="far fa-heart like-btn"></i>
        <%= books.favorites.count %>

    <% end %>

<% end %>