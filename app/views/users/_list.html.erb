<h2>User info</h2>
<%= attachment_image_tag(user, :profile_image, :fill, 100, 100, fallback:"no_image.jpg") %>
  <table class="table">
    <tbody>
      <tr>
        <th class="profile-name">name</th>
        <th><%= user.name %></th>
      </tr>
      <tr>
        <th class="profile-name">introduction</th>
        <th><%= user.introduction %></th>
      </tr>
  </tbody>
</table>
        <%= link_to "", edit_user_path(user.id), class: "btn btn-outline-secondary btn-block fas fa-user-cog" %>

<% unless current_user?(@user) %>
  <div id="follow_form">
  <% if current_user.following?(user) %>
   <%= link_to "Unfollow", user_relationships_path(user.id), method: :delete %>
  <% else %>
   <%= link_to "Follow", user_relationships_path(user.id), method: :post %>
  <% end %>
  </div>
<% end %>

